#include <stdio.h>
#include <string.h>

#define MAX_LIBROS 10

struct Libro {
    int id;
    char titulo[100];
    char autor[50];
    int anio;
    char estado[12];
};

struct Libro biblioteca[MAX_LIBROS];
int totalLibros = 0;

// Verificar si el ID ya existe
int idExiste(int id) {
    for (int i = 0; i < totalLibros; i++) {
        if (biblioteca[i].id == id) {
            return 1;
        }
    }
    return 0;
}

// Registrar libro
void registrarLibro() {
    if (totalLibros == MAX_LIBROS) {
        printf("❌ Límite excedido: solo se permiten 10 libros.\n");
        return;
    }

    struct Libro nuevo;

    printf("Ingrese ID del libro: ");
    scanf("%d", &nuevo.id);

    if (idExiste(nuevo.id)) {
        printf("❌ Error: El ID ya existe.\n");
        return;
    }

    getchar(); // limpiar buffer

    printf("Ingrese título: ");
    fgets(nuevo.titulo, 100, stdin);
    nuevo.titulo[strcspn(nuevo.titulo, "\n")] = 0;

    printf("Ingrese autor: ");
    fgets(nuevo.autor, 50, stdin);
    nuevo.autor[strcspn(nuevo.autor, "\n")] = 0;

    // Validación del año
    do {
        printf("Ingrese año de publicación (mayor a 0): ");
        scanf("%d", &nuevo.anio);
        if (nuevo.anio <= 0) {
            printf("❌ Año inválido. No puede ser negativo ni cero.\n");
        }
    } while (nuevo.anio <= 0);

    strcpy(nuevo.estado, "Disponible");

    biblioteca[totalLibros++] = nuevo;
    printf("✅ Libro registrado correctamente.\n");
}

// Mostrar libros
void mostrarLibros() {
    if (totalLibros == 0) {
        printf("No hay libros registrados.\n");
        return;
    }

    printf("\n%-5s %-25s %-20s %-6s %-10s\n", "ID", "Título", "Autor", "Año", "Estado");
    for (int i = 0; i < totalLibros; i++) {
        printf("%-5d %-25s %-20s %-6d %-10s\n",
               biblioteca[i].id,
               biblioteca[i].titulo,
               biblioteca[i].autor,
               biblioteca[i].anio,
               biblioteca[i].estado);
    }
}

// Buscar libro
void buscarLibro() {
    int opcion, id;
    char titulo[100];

    printf("Buscar por: 1) ID  2) Título: ");
    scanf("%d", &opcion);
    getchar();

    for (int i = 0; i < totalLibros; i++) {
        if (opcion == 1) {
            printf("Ingrese ID: ");
            scanf("%d", &id);
            if (biblioteca[i].id == id) {
                printf("Libro encontrado: %s - %s - %d - %s\n",
                       biblioteca[i].titulo,
                       biblioteca[i].autor,
                       biblioteca[i].anio,
                       biblioteca[i].estado);
                return;
            }
        } else if (opcion == 2) {
            printf("Ingrese título: ");
            fgets(titulo, 100, stdin);
            titulo[strcspn(titulo, "\n")] = 0;

            if (strcmp(biblioteca[i].titulo, titulo) == 0) {
                printf("Libro encontrado: %d - %s - %s - %d - %s\n",
                       biblioteca[i].id,
                       biblioteca[i].titulo,
                       biblioteca[i].autor,
                       biblioteca[i].anio,
                       biblioteca[i].estado);
                return;
            }
        }
    }
    printf("Libro no encontrado.\n");
}

// Actualizar estado
void actualizarEstado() {
    int id;
    printf("Ingrese ID del libro: ");
    scanf("%d", &id);

    for (int i = 0; i < totalLibros; i++) {
        if (biblioteca[i].id == id) {
            if (strcmp(biblioteca[i].estado, "Disponible") == 0)
                strcpy(biblioteca[i].estado, "Prestado");
            else
                strcpy(biblioteca[i].estado, "Disponible");

            printf("Estado actualizado correctamente.\n");
            return;
        }
    }
    printf("Libro no encontrado.\n");
}

// Eliminar libro
void eliminarLibro() {
    int id;
    printf("Ingrese ID del libro a eliminar: ");
    scanf("%d", &id);

    for (int i = 0; i < totalLibros; i++) {
        if (biblioteca[i].id == id) {
            for (int j = i; j < totalLibros - 1; j++) {
                biblioteca[j] = biblioteca[j + 1];
            }
            totalLibros--;
            printf("Libro eliminado correctamente.\n");
            return;
        }
    }
    printf("Libro no encontrado.\n");
}

// Menú principal
int main() {
    int opcion;

    do {
        printf("\n--- Biblioteca ---\n");
        printf("1. Registrar libro\n");
        printf("2. Mostrar libros\n");
        printf("3. Buscar libro\n");
        printf("4. Actualizar estado\n");
        printf("5. Eliminar libro\n");
        printf("6. Salir\n");
        printf("Seleccione una opción: ");
        scanf("%d", &opcion);

        switch (opcion) {
            case 1: registrarLibro(); break;
            case 2: mostrarLibros(); break;
            case 3: buscarLibro(); break;
            case 4: actualizarEstado(); break;
            case 5: eliminarLibro(); break;
            case 6: printf("Saliendo del programa...\n"); break;
            default: printf("Opción inválida.\n");
        }
    } while (opcion != 6);

    return 0;